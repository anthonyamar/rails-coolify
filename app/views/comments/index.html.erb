<div>
  <h1 class="font-bold text-4xl mb-4">Comments#index</h1>

  <%= link_to "New Comment", new_comment_path, class: "bg-blue-500 text-white px-4 py-2 rounded-md" %>
  <%= link_to "Root", root_path, class: "bg-blue-500 text-white px-4 py-2 rounded-md" %>

  <ul>
    <% @comments.each do |comment| %>
      <li class="border-b border-gray-200 py-4"><%= comment.body %></li>
    <% end %>
  </ul>
</div>
